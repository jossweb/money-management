<Window x:Class="Money_Management.ErrorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Money_Management"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Title="Erreur" Height="250" Width="400"
        Background="White">
    <Grid>
        <Rectangle Margin="10,15,10,50">
            <Rectangle.Fill>
                <SolidColorBrush Color="LightGray" />
            </Rectangle.Fill>
        </Rectangle>
        <TextBlock Text="Erreur : " FontSize="12" x:Name="error" TextAlignment="Center" Margin="16,20,10,80"/>
        <Button Content="OK" Click="CloseButton_Click" Margin="150,167,150,26"/>
    </Grid>
</Window>
