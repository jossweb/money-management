<Window x:Class="Money_Management.ErrorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Money_Management"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Title="Erreur" Height="220" Width="400">
    <Window.Resources>
        <Style TargetType="Window">
            <Setter Property="Window.BorderBrush" Value="Red" />
            <Setter Property="Window.BorderThickness" Value="2" />
        </Style>
    </Window.Resources>
    <Grid>
        <TextBlock Text="Erreur : " FontSize="12" FontWeight="Bold" x:Name="error" TextAlignment="Left" Margin="138,7,10,120"/>
        <Button Content="OK" Click="CloseButton_Click" Width="40" Height="20" Margin="76,92,284,92"/>
    </Grid>
</Window>
